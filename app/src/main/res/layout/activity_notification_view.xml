<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.avdhutkadam.locs.NotificationView"
    android:weightSum="1"
    android:background="#71f1f738">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="You reached at:-"
        android:id="@+id/textView9"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:textSize="20dp"
        android:textColor="#d12b2b" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView_putReachedLocation"
        android:layout_below="@+id/textView9"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="53dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:textSize="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Task to perform:-"
        android:id="@+id/textView11"
        android:layout_below="@+id/textView_putReachedLocation"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="59dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:textSize="20dp"
        android:textColor="#d12b2b" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView_putReachedTask"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:textSize="20dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CLEAR"
        android:id="@+id/button_clrNotification"
        android:layout_below="@+id/textView_putReachedTask"
        android:layout_alignParentStart="true"
        android:layout_marginTop="59dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="STOP"
        android:id="@+id/button_stopNotification"
        android:layout_alignTop="@+id/button_clrNotification"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="  SET NEXT LOCATION ALARM"
        android:id="@+id/textView_setAnotherAlarm"
        android:layout_alignParentStart="true"
        android:textColor="#060606"
        android:textSize="20dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        style="@style/FullscreenActionBarStyle"
        android:textStyle="bold|italic"
        android:textIsSelectable="false"
        android:singleLine="false" />
</RelativeLayout>

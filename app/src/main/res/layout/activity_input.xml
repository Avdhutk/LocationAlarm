<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.avdhutkadam.locs.inputActivity"
    android:background="#71f1f738">
    <TextView
        android:text="INPUT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textview_input"
        android:textSize="30dp"
        android:textColor="#df5050"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        style="@style/Base.TextAppearance.AppCompat.Title" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText_location"
        android:hint="Enter location"
        android:textColorHint="#ffff25e6"
        android:layout_below="@+id/textview_input"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText_task"
        android:hint="Enter task"
        android:textColorHint="#ffff25e6"
        android:layout_marginTop="49dp"
        android:layout_below="@+id/editText_location"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SUBMIT"
        android:id="@+id/button_submit"
        android:layout_above="@+id/textView_putLatLng"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="80dp"
        android:layout_alignParentEnd="true"
        android:background="#50c9457c"
        style="@style/Animation.AppCompat.Dialog" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Your Lat/Lng"
        android:id="@+id/textView_putLatLng"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="43dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DONE"
        android:id="@+id/button_clrNotification"
        android:background="#8b569cf7"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/button_submit" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton_addMore"
        android:src="@android:drawable/ic_input_add"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/editText_location" />

</RelativeLayout>

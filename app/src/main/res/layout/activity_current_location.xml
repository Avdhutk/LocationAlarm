<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.avdhutkadam.locs.currentLocationActivity"
    android:background="#71f1f738">
    <TextView
        android:text="CURRENT LOCATION"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textview_currentloc"
        android:textSize="25dp"
        android:textColor="#df5050"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        style="@style/Base.TextAppearance.AppCompat.Title" />
    <TextView
        android:text="Searching..."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_currentlocation"
        android:layout_below="@+id/textView5"
        android:layout_alignStart="@+id/textView5"
        android:layout_marginStart="57dp"
        android:layout_marginTop="45dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your current location is:"
        android:id="@+id/textView5"
        android:textSize="20dp"
        android:layout_marginTop="43dp"
        android:layout_below="@+id/textview_currentloc"
        android:layout_alignStart="@+id/textview_currentloc" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_setAlarm"
        android:layout_alignParentBottom="true"
        android:src="@drawable/abc_btn_check_to_on_mtrl_015"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Set an alarm"
        android:textSize="20dp"
        android:id="@+id/textView7"
        android:layout_alignBottom="@+id/button_setAlarm"
        android:layout_alignStart="@+id/txt_currentlocation" />

</RelativeLayout>
